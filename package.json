{
  "name": "automate-nss-root",
  "private": true,
  "version": "0.1.0",
  "scripts": {
      "setup": "npm run setup:venv && npm run setup:backend && npm run setup:frontend",

      "setup:venv": "python -m venv backend/.venv",
      "pip": "backend\\.venv\\Scripts\\python.exe -m pip",
      "py": "backend\\.venv\\Scripts\\python.exe",

      "setup:backend": "npm run pip -- install -r backend/requirements.txt",
      "setup:frontend": "cd frontend && npm install",

      "dev": "concurrently -k -n BACKEND,FRONTEND -c magenta,cyan \"npm:dev:backend\" \"npm:dev:frontend\"",
      "dev:backend": "cross-env PYTHONUNBUFFERED=1 backend\\.venv\\Scripts\\python.exe backend\\app.py",
      "dev:frontend": "npm --prefix frontend run dev",

      "build": "npm --prefix frontend run build",
      "preview": "concurrently -k -n BACKEND,FRONTEND -c magenta,cyan \"npm:dev:backend\" \"npm --prefix frontend run preview\"",

      "start": "npm run dev",
      "stop": "echo Use CTRL+C to stop both processes"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.3",
    "wait-on": "^8.0.2"
  }
}